@if (IsOpen)
{
    <div class="modal-overlay">
        <div class="modal-card modal-lose">
            <div class="modal-icon-wrap">
                <span class="material-symbols-outlined modal-icon">sentiment_dissatisfied</span>
            </div>

            <div>
                <h2 class="modal-title">Nice try!</h2>
                <p class="modal-sub">The word was:</p>
            </div>

            <div class="modal-word">
                @foreach (var ch in Word)
                {
                    <div class="modal-tile">@ch</div>
                }
            </div>

            <button class="modal-btn modal-btn-lose" @onclick="OnTryAgain">
                TRY AGAIN
            </button>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public string Word { get; set; } = "";
    [Parameter] public EventCallback OnTryAgain { get; set; }
}